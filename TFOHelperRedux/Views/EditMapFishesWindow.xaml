<Window x:Class="TFOHelperRedux.Views.EditMapFishesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Рыбы на локации"
        Width="520"
        Height="700"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource AppBackground}">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок: имя карты -->
        <TextBlock x:Name="txtHeader"
                   FontSize="16"
                   FontWeight="Bold"
                   Margin="0,0,0,8"
                   Foreground="{DynamicResource TextPrimary}"/>

        <!-- Список всех рыб с галочками -->
        <Border Grid.Row="1"
                BorderBrush="{DynamicResource BorderBrushLight}"
                BorderThickness="1"
                CornerRadius="6"
                Background="{DynamicResource PanelBackground}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- 🔍 Поиск по рыбе -->
                <TextBox x:Name="tbSearch"
                         Margin="6,6,6,4"
                         Padding="4"
                         Height="26"
                         TextChanged="tbSearch_TextChanged"
                         ToolTip="Поиск по названию рыбы"
                         Foreground="{DynamicResource TextPrimary}"/>

                <!-- Список рыб с галочками -->
                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="FishItemsControl">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <CheckBox Margin="4"
                                          IsChecked="{Binding IsOnMap, Mode=TwoWay}"
                                          Content="{Binding Fish.Name}"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>
        <!-- Кнопки -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,8,0,0">
            <Button Width="100"
                    Height="30"
                    Margin="4,0,0,0"
                    Content="Закрыть"
                    Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>