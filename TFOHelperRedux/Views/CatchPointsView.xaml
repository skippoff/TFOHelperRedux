<UserControl x:Class="TFOHelperRedux.Views.CatchPointsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <TextBlock Text="🎯 Точки лова"
                   FontSize="18"
                   FontWeight="Bold"
                   VerticalAlignment="Center"/>

            <!-- имя текущей рыбы -->
            <TextBlock Text="{Binding CurrentFish.Name, FallbackValue='(все)'}"
                   FontSize="16"
                   Foreground="{DynamicResource PrimaryColor}"
                   FontWeight="SemiBold"
                   Margin="10,0,0,0"
                   VerticalAlignment="Center"/>
        </StackPanel>

        <ItemsControl Grid.Row="1"
                  ItemsSource="{Binding FilteredPoints}"
                  Margin="0,6,0,0">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="2"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Style="{StaticResource CatchPointCardStyle}"
                            Margin="3"
                            SnapsToDevicePixels="True"
                            MouseLeftButtonDown="CatchPoint_MouseLeftButtonDown">
                        <Grid>
                            <!-- 🗺 Кнопка открытия карты в левом верхнем углу -->
                            <Button Content="🗺"
                                    Width="34" Height="34"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    Margin="0"
                                    Style="{StaticResource IconButton}"
                                    Background="{DynamicResource ButtonPrimaryBrush}"
                                    Foreground="{DynamicResource TextPrimary}"
                                    BorderBrush="{DynamicResource BorderBrushLight}"
                                    Command="{Binding DataContext.OpenMapCmd,
                                                      RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"
                                    ToolTip="Открыть карту"/>

                            <!-- Контент карточки с отступами для кнопок -->
                            <StackPanel Margin="40,0,75,0">
                                <!-- 🗺 Карта -->
                                <TextBlock Text="{Binding MapName}"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextPrimary}"
                                           FontSize="16"
                                           HorizontalAlignment="Center"/>

                                <!-- 📍 Координаты -->
                                <StackPanel Orientation="Horizontal" Margin="0,2,0,2">
                                    <TextBlock Text="X:" Foreground="{DynamicResource TextSecondary}" FontSize="14" Margin="0,0,2,0"/>
                                    <TextBlock Text="{Binding Coords.X}" Foreground="{DynamicResource TextPrimary}" FontSize="14"/>
                                    <TextBlock Text="   Y:" Foreground="{DynamicResource TextSecondary}" FontSize="14" Margin="8,0,2,0"/>
                                    <TextBlock Text="{Binding Coords.Y}" Foreground="{DynamicResource TextPrimary}" FontSize="14"/>
                                </StackPanel>

                                <!-- 💬 Комментарий -->
                                <TextBlock Text="{Binding Comment}"
                                           FontSize="16"
                                           Foreground="{DynamicResource TextSecondary}"
                                           TextWrapping="Wrap"
                                           Margin="0,2,0,0"/>
                                <!-- Особенности -->
                                <TextBlock Text="{Binding FeaturesInfo}"
                                           FontSize="15"
                                           Foreground="{DynamicResource TextSecondary}"
                                           TextWrapping="Wrap"
                                           Margin="0,4,0,0"/>

                                <!-- Время лова -->
                                <TextBlock Text="{Binding TimeInfo}"
                                           FontSize="15"
                                           Foreground="{DynamicResource TextSecondary}"
                                           TextWrapping="Wrap"/>

                                <!-- Тип удилища -->
                                <TextBlock Text="{Binding RodTypeInfo}"
                                           FontSize="15"
                                           Foreground="{DynamicResource TextSecondary}"
                                           TextWrapping="Wrap"/>

                                <!-- Глубина -->
                                <TextBlock Text="{Binding DepthInfo}"
                                           FontSize="15"
                                           Foreground="{DynamicResource TextSecondary}"
                                           TextWrapping="Wrap"
                                           Margin="0,0,0,4"/>
                                <!-- Клипса -->
                                <TextBlock Text="{Binding ClipInfo}"
                                           FontSize="15"
                                           Foreground="{DynamicResource TextSecondary}"
                                           TextWrapping="Wrap"
                                           Margin="0,0,0,4"/>

                            </StackPanel>
                            <!-- ❌ Крестик (удалить точку) в правом верхнем углу -->
                            <Button Content="✖"
                                    Width="34" Height="34"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Margin="0"
                                    Style="{StaticResource IconButton}"
                                    Background="{DynamicResource ButtonDeleteBrush}"
                                    Foreground="{DynamicResource TextPrimary}"
                                    BorderBrush="{DynamicResource BorderBrushLight}"
                                    Command="{Binding DataContext.DeletePointCmd,
                                                      RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"
                                    ToolTip="Удалить точку"/>

                            <!-- ✏ Карандаш (редактировать точку) в правом нижнем углу -->
                            <Button Content="✏"
                                    Width="34" Height="34"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Bottom"
                                    Margin="0,0,0,4"
                                    Style="{StaticResource IconButton}"
                                    Background="{DynamicResource ButtonEditBrush}"
                                    Foreground="{DynamicResource TextPrimary}"
                                    BorderBrush="{DynamicResource BorderBrushLight}"
                                    Command="{Binding DataContext.EditPointCmd,
                                                      RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"
                                    ToolTip="Редактировать точку"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</UserControl>
