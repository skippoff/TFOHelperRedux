                    BorderThickness="1"
                    Visibility="{Binding CurrentMode, Converter={StaticResource EqualityToVisibilityConverter}, ConverterParameter={x:Static helpers:NavigationModes.Maps}}" Grid.RowSpan="2">
                <Grid>
                    <Grid.RowDefinitions>
