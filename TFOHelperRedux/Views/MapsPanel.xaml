                                           Foreground="{DynamicResource TextSecondary}"/>
                                <ComboBox ItemsSource="{Binding MapLevels}"
                                          SelectedItem="{Binding SelectedLevelFilter, Mode=TwoWay}"
                                          Width="80"
                                          Margin="6,0,0,0"
                                          Foreground="{DynamicResource TextPrimary}"/>
                            </StackPanel>
                            <!-- Ð•Ð´Ð¸Ð½Ñ‹Ð¹ ÑÐ¿Ð¸ÑÐ¾Ðº Ð»Ð¾ÐºÐ°Ñ†Ð¸Ð¹ Ñ Ð³Ñ€ÑƒÐ¿Ð¿Ð¸Ñ€Ð¾Ð²ÐºÐ¾Ð¹ -->
                            <ListBox x:Name="MapsListBox"
                                     ItemsSource="{Binding AllMaps}"
                                     SelectedItem="{Binding SelectedMap, Mode=TwoWay}"
                                     DisplayMemberPath="Name"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     ScrollViewer.CanContentScroll="False"
                                     VirtualizingPanel.IsVirtualizing="False"
                                     ScrollViewer.ScrollChanged="MapsScrollViewer_ScrollChanged"
                                     SelectionChanged="MapsListBox_SelectionChanged">
                                <ListBox.GroupStyle>
                                    <GroupStyle>
                                        <GroupStyle.HeaderTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Name, Converter={StaticResource MapGroupConverter}}"
                                                           FontSize="14"
                                                           FontWeight="Bold"
                                                           Margin="4,8,4,2"
                                                           Padding="4,2">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Foreground" Value="{DynamicResource TextSecondary}"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Name, Converter={StaticResource MapGroupConverter}}" Value="Ð›Ð¾ÐºÐ°Ñ†Ð¸Ð¸ DLC">
                                                                    <Setter Property="Foreground" Value="{DynamicResource AccentFeed}"/>
