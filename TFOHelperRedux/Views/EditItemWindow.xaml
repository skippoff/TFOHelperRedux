<Window x:Class="TFOHelperRedux.Views.EditItemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование элемента" Width="450" Height="260" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical" Grid.Row="0" Margin="0,0,0,8">
            <TextBlock Text="Название" FontWeight="Bold"/>
            <TextBox Text="{Binding Name, Mode=TwoWay}" />
        </StackPanel>

        <StackPanel Orientation="Vertical" Grid.Row="1" Margin="0,0,0,8">
            <TextBlock Text="Комментарий" FontWeight="Bold"/>
            <TextBox Text="{Binding Comment, Mode=TwoWay}" />
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="2" VerticalAlignment="Top">
            <StackPanel Orientation="Vertical" Width="320">
                <TextBlock Text="Путь к изображению" FontWeight="Bold"/>
                <TextBox Text="{Binding ImagePath, Mode=TwoWay}" />
            </StackPanel>
            <Button Content="Обзор..." Width="80" Margin="8,20,0,0" Click="Browse_Click"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="3" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="OK" Width="90" Margin="0,0,8,0" IsDefault="True" Click="Ok_Click"/>
            <Button Content="Отмена" Width="90" IsCancel="True" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
