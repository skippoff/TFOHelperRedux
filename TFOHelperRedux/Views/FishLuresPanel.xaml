<UserControl x:Class="TFOHelperRedux.Views.FishLuresPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:helpers="clr-namespace:TFOHelperRedux.Helpers"
             xmlns:conv="clr-namespace:TFOHelperRedux.Converters"
             x:Name="ThisControl"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="600">

    <UserControl.Resources>
        <Style x:Key="SearchTextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
            <Setter Property="CaretBrush" Value="{DynamicResource TextPrimary}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{DynamicResource PrimaryColor}"
                                BorderThickness="2"
                                CornerRadius="3">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Margin="4,0"
                                          VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" helpers:ScrollViewerHelper.EnableMouseWheelScroll="True">
        <StackPanel Margin="6">
            <!-- Рыбы -->
            <TextBlock Text="Рыбы:" FontWeight="Bold" Margin="0,0,0,4" Foreground="{DynamicResource TextPrimary}"/>
            <TextBox x:Name="tbFishSearch"
                     Style="{StaticResource SearchTextBoxStyle}"
                     TextChanged="TbFishSearch_TextChanged"
                     ToolTip="Поиск по названию рыбы"/>
            <Border BorderThickness="1" CornerRadius="3" BorderBrush="{DynamicResource BorderBrushLight}">
                <ScrollViewer Height="250" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding FishView, RelativeSource={RelativeSource AncestorType=UserControl}}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                <CheckBox Content="{Binding Name}"
                                          IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                          Tag="{Binding ID}"
                                          Margin="2"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>

            <!-- Горизонтальное размещение: Может клевать + Лучшие наживки -->
            <Grid Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Может клевать -->
                <StackPanel Grid.Column="0" Margin="0,0,6,0">
                    <TextBlock Text="Может клевать:" FontWeight="Bold" Margin="0,0,0,4" Foreground="{DynamicResource TextPrimary}"/>
                    <TextBox x:Name="tbLureSearch"
                             Style="{StaticResource SearchTextBoxStyle}"
                             TextChanged="TbLureSearch_TextChanged"
                             ToolTip="Поиск по названию наживки"/>
                    <Border BorderThickness="1" CornerRadius="3" BorderBrush="{DynamicResource BorderBrushLight}">
                        <ScrollViewer Height="220" VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding LuresView, RelativeSource={RelativeSource AncestorType=UserControl}}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <CheckBox Content="{Binding Name}"
                                                  Tag="{Binding ID}"
                                                  Checked="Lure_Checked"
                                                  Unchecked="Lure_Unchecked"
                                                  Margin="2">
                                            <CheckBox.IsChecked>
                                                <MultiBinding Converter="{StaticResource LureCheckedConverter}" Mode="OneWay" FallbackValue="False">
                                                    <Binding Path="CatchPoint.LureIDs" RelativeSource="{RelativeSource AncestorType=UserControl}"/>
                                                    <Binding Path="ID"/>
                                                </MultiBinding>
                                            </CheckBox.IsChecked>
                                        </CheckBox>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Border>
                </StackPanel>

                <!-- Лучшие наживки -->
                <StackPanel Grid.Column="1" Margin="6,0,0,0">
                    <TextBlock Text="Лучшие наживки:" FontWeight="Bold" Margin="0,0,0,4" Foreground="{DynamicResource TextPrimary}"/>
                    <TextBox x:Name="tbBestLureSearch"
                             Style="{StaticResource SearchTextBoxStyle}"
                             TextChanged="TbBestLureSearch_TextChanged"
                             ToolTip="Поиск по названию лучшей наживки"/>
                    <Border BorderThickness="1" CornerRadius="3" BorderBrush="{DynamicResource BorderBrushLight}">
                        <ScrollViewer Height="220" VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding LuresView, RelativeSource={RelativeSource AncestorType=UserControl}}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <CheckBox Content="{Binding Name}"
                                                  Tag="{Binding ID}"
                                                  Checked="BestLure_Checked"
                                                  Unchecked="BestLure_Unchecked"
                                                  Margin="2">
                                            <CheckBox.IsChecked>
                                                <MultiBinding Converter="{StaticResource BestLureCheckedConverter}" Mode="OneWay" FallbackValue="False">
                                                    <Binding Path="CatchPoint.BestLureIDs" RelativeSource="{RelativeSource AncestorType=UserControl}"/>
                                                    <Binding Path="ID"/>
                                                </MultiBinding>
                                            </CheckBox.IsChecked>
                                        </CheckBox>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Border>
                </StackPanel>
            </Grid>
        </StackPanel>
    </ScrollViewer>

</UserControl>
