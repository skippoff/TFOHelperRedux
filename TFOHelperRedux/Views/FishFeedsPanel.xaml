<UserControl x:Class="TFOHelperRedux.Views.FishFeedsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:helpers="clr-namespace:TFOHelperRedux.Helpers"
             xmlns:conv="clr-namespace:TFOHelperRedux.Converters"
             x:Name="ThisControl"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="600">

    <UserControl.Resources>
        <Style x:Key="SearchTextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
            <Setter Property="CaretBrush" Value="{DynamicResource TextPrimary}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{DynamicResource PrimaryColor}"
                                BorderThickness="2"
                                CornerRadius="3">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Margin="4,0"
                                          VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" helpers:ScrollViewerHelper.EnableMouseWheelScroll="True">
        <StackPanel Margin="6">
            <!-- Поиск -->
            <TextBlock Text="Поиск прикормки:" FontWeight="Bold" Margin="0,0,0,4" Foreground="{DynamicResource TextPrimary}"/>
            <TextBox x:Name="tbSearch"
                     Style="{StaticResource SearchTextBoxStyle}"
                     TextChanged="TbSearch_TextChanged"
                     ToolTip="Поиск по названию прикормки или рецепта"/>

            <!-- Фильтры -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                <CheckBox Content="Обычные"
                          IsChecked="{Binding ShowFeeds, Mode=TwoWay}"
                          Margin="0,0,8,0"/>
                <CheckBox Content="Крафтовые"
                          IsChecked="{Binding ShowRecipes, Mode=TwoWay}"/>
            </StackPanel>

            <!-- Обычные прикормки -->
            <TextBlock Text="Обычные прикормки:" FontWeight="Bold" Margin="0,0,0,4" Foreground="{DynamicResource TextPrimary}"/>
            <Border BorderThickness="1" CornerRadius="3" BorderBrush="{DynamicResource BorderBrushLight}">
                <ScrollViewer Height="200" VerticalScrollBarVisibility="Auto" helpers:ScrollViewerHelper.EnableMouseWheelScroll="True">
                    <ItemsControl ItemsSource="{Binding FeedsView}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <CheckBox Content="{Binding Name}"
                                          Tag="{Binding ID}">
                                    <CheckBox.IsChecked>
                                        <MultiBinding Converter="{StaticResource FeedCheckedConverter}" Mode="OneWay" FallbackValue="False">
                                            <Binding Path="CatchPoint" RelativeSource="{RelativeSource AncestorType=UserControl}"/>
                                            <Binding Path="ID"/>
                                        </MultiBinding>
                                    </CheckBox.IsChecked>
                                    <CheckBox.Style>
                                        <Style TargetType="CheckBox">
                                            <EventSetter Event="Checked" Handler="Feed_Checked"/>
                                            <EventSetter Event="Unchecked" Handler="Feed_Unchecked"/>
                                            <Setter Property="Margin" Value="2"/>
                                        </Style>
                                    </CheckBox.Style>
                                </CheckBox>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>

            <!-- Крафтовые прикормки (рецепты) -->
            <TextBlock Text="Крафтовые прикормки (рецепты):" FontWeight="Bold" Margin="0,10,0,4" Foreground="{DynamicResource TextPrimary}"/>
            <Border BorderThickness="1" CornerRadius="3" BorderBrush="{DynamicResource BorderBrushLight}">
                <ScrollViewer Height="200" VerticalScrollBarVisibility="Auto" helpers:ScrollViewerHelper.EnableMouseWheelScroll="True">
                    <ItemsControl ItemsSource="{Binding RecipesView}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <CheckBox Content="{Binding Name}"
                                          Tag="{Binding ID}">
                                    <CheckBox.IsChecked>
                                        <MultiBinding Converter="{StaticResource RecipeCheckedConverter}" Mode="OneWay" FallbackValue="False">
                                            <Binding Path="CatchPoint" RelativeSource="{RelativeSource AncestorType=UserControl}"/>
                                            <Binding Path="ID"/>
                                        </MultiBinding>
                                    </CheckBox.IsChecked>
                                    <CheckBox.Style>
                                        <Style TargetType="CheckBox">
                                            <EventSetter Event="Checked" Handler="Recipe_Checked"/>
                                            <EventSetter Event="Unchecked" Handler="Recipe_Unchecked"/>
                                            <Setter Property="Margin" Value="2"/>
                                        </Style>
                                    </CheckBox.Style>
                                </CheckBox>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>
        </StackPanel>
    </ScrollViewer>

</UserControl>
