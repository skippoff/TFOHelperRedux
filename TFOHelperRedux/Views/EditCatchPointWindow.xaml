<Window x:Class="TFOHelperRedux.Views.EditCatchPointWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:services="clr-namespace:TFOHelperRedux.Services"
        xmlns:local="clr-namespace:TFOHelperRedux.Views"
        Title="Добавление / Редактирование точки лова"
        Height="790" Width="1200"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource AppBackground}"
        FontFamily="Segoe UI" FontSize="14">

    <Border BorderBrush="{DynamicResource BorderBrushLight}" BorderThickness="1" CornerRadius="6" Padding="10" Background="{DynamicResource PanelBackground}">
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <!-- Левая панель -->
            <local:CatchPointEditorPanel x:Name="LeftPanel" Grid.Column="0" />
            <!-- Центральная панель: Рыбы и воблеры -->
            <local:FishLuresPanel x:Name="CenterPanel" Grid.Column="1"
                                  FishView="{Binding FishView}"
                                  LuresView="{Binding LuresView}" />
            <!-- Правая панель: Прикормки -->
            <local:FishFeedsPanel x:Name="RightPanel" Grid.Column="2" />
            <!-- Нижние кнопки -->
            <DockPanel Grid.ColumnSpan="3" VerticalAlignment="Bottom" Margin="0,10,0,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="❌ Отмена"
                            Width="120" Height="34"
                            Margin="0,0,10,0"
                            Background="{StaticResource ButtonDeleteBrush}"
                            Foreground="White"
                            Cursor="Hand"
                            Click="Cancel_Click"/>
                    <Button Content="✅ Сохранить"
                            Width="130" Height="34"
                            Background="{StaticResource SuccessColor}"
                            Foreground="White"
                            FontWeight="Bold"
                            Cursor="Hand"
                            Click="Ok_Click"/>
                </StackPanel>
            </DockPanel>
        </Grid>
    </Border>
</Window>
