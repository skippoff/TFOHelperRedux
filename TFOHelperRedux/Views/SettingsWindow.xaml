<Window x:Class="TFOHelperRedux.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TFOHelperRedux.Views"
        mc:Ignorable="d"
        Title="Настройки" 
        Height="350" 
        Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource AppBackground}"
        FontFamily="Segoe UI" FontSize="14">

    <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <TextBlock Grid.Row="0" 
                       Text="Настройки пользователя" 
                       FontSize="18" 
                       FontWeight="Bold"
                       Foreground="{DynamicResource TextPrimary}"
                       Margin="0,0,0,20"/>

            <!-- Содержимое -->
            <StackPanel Grid.Row="1" Margin="0,0,0,20">
                
                <!-- Никнейм -->
                <TextBlock Text="Ваш никнейм:" 
                           FontWeight="Bold"
                           Foreground="{DynamicResource TextPrimary}"
                           Margin="0,0,0,8"/>
                <TextBox x:Name="TxtNickName"
                         Height="40"
                         Padding="8,10"
                         FontSize="14"
                         Foreground="{DynamicResource TextPrimary}"
                         CaretBrush="{DynamicResource TextPrimary}"
                         Background="{DynamicResource InputBackground}"
                         BorderBrush="{DynamicResource BorderBrushLight}"
                         BorderThickness="1"
                         Margin="0,0,0,15"
                         ToolTip="Никнейм будет отображаться в экспортированных файлах точек лова"/>
                <TextBlock Text="По умолчанию: Anonymous" 
                           FontSize="12"
                           Foreground="{DynamicResource TextSecondary}"
                           Margin="0,0,0,20"/>

                <!-- Отображение никнейма -->
                <CheckBox x:Name="ChkShowNickName"
                          Content="Показывать никнейм в экспортированных файлах"
                          Foreground="{DynamicResource TextPrimary}"
                          FontSize="14"
                          Margin="0,0,0,8"
                          IsChecked="True"/>
                <TextBlock Text="Если отключено, в файлах будет указано &quot;Anonymous&quot;" 
                           FontSize="12"
                           Foreground="{DynamicResource TextSecondary}"
                           TextWrapping="Wrap"/>
            </StackPanel>

            <!-- Кнопки -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Отмена"
                        Style="{StaticResource CancelButton}"
                        Tag="{StaticResource IconClose}"
                        Width="130" Height="44"
                        Margin="0,0,10,0"
                        Click="Cancel_Click"/>
                <Button Content="Сохранить"
                        Style="{StaticResource SaveButton}"
                        Tag="{StaticResource IconSave}"
                        Width="150" Height="44"
                        Click="Save_Click"/>
            </StackPanel>
        </Grid>
</Window>
