<UserControl x:Class="TFOHelperRedux.Views.FishCategoriesPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Border Margin="2"
            Background="AliceBlue"
            CornerRadius="6"
            BorderBrush="#DDDDDD"
            BorderThickness="1"
            Padding="12">
        <StackPanel>
            <TextBlock Text="КАТЕГОРИИ"
                       FontWeight="Bold"
                       FontSize="14"
                       Margin="4,0,0,8"
                       Foreground="#666" />
            <ListBox x:Name="CategoryList"
                     Background="Transparent"
                     BorderThickness="0"
                     SelectedIndex="0"
                     SelectionChanged="CategoryList_SelectionChanged"
                     ItemContainerStyle="{StaticResource CategoryListBoxItem}">
                <ListBoxItem Tag="0">Вся рыба</ListBoxItem>
                <ListBoxItem Tag="1">Карповые</ListBoxItem>
                <ListBoxItem Tag="2">Лососевые</ListBoxItem>
                <ListBoxItem Tag="3">Окуневые</ListBoxItem>
                <ListBoxItem Tag="4">Морская</ListBoxItem>
            </ListBox>
        </StackPanel>
    </Border>
</UserControl>