<UserControl x:Class="TFOHelperRedux.Views.FishDetailsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:views="clr-namespace:TFOHelperRedux.Views"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="400"
             d:DesignWidth="350">


    <!-- RIGHT: Детальная информация -->
    <Border
        Margin="2"
        Background="{StaticResource PanelBackground}"
        CornerRadius="6"
        BorderBrush="{StaticResource BorderBrushLight}"
        BorderThickness="1"
        Padding="16">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Grid>
                <!-- Контент для выбранной рыбы -->
                <StackPanel x:Name="FishDetailsContent">
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SelectedFish}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>
                    <!-- Header -->
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Width="140" Height="90"
                     Background="{DynamicResource PanelBackground}"
                     CornerRadius="6"
                     BorderBrush="{DynamicResource BorderBrushLight}"
                     BorderThickness="1"
                     Padding="8">
                            <Image Source="{Binding SelectedFish.ImagePath, Converter={StaticResource ImgConverter}}"
                        Stretch="Uniform"/>
                        </Border>

                        <StackPanel Grid.Column="1" Margin="16,0,0,0" VerticalAlignment="Top">
                            <TextBlock Text="{Binding SelectedFish.Name}"
                            FontSize="18"
                            FontWeight="Bold"
                            Foreground="{DynamicResource TextPrimary}"
                            TextWrapping="Wrap"/>
                            <TextBlock Text="{Binding SelectedFish.Comment}"
                            FontSize="16"
                            FontStyle="Italic"
                            Foreground="{DynamicResource TextSecondary}"
                            Margin="0,4,0,0"
                            TextWrapping="Wrap"/>
                        </StackPanel>
                    </Grid>
                    <!-- Краткая информация -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="Краткая информация"
                        FontWeight="SemiBold"
                        FontSize="14"
                        Foreground="{DynamicResource TextSecondary}"
                        Margin="0,0,0,8"/>
                        <TextBlock Text="{Binding SelectedFish.Name, FallbackValue='Нет информации'}"
                        Foreground="{DynamicResource TextSecondary}"
                        TextWrapping="Wrap"/>
                        <!-- Трофей от ... (г), просто информация -->
                        <TextBlock Text="{Binding SelectedFish.WeightTrophy,
                              StringFormat='Трофей от {0} г',
                              FallbackValue='Трофей: нет данных'}"
                                   Foreground="{DynamicResource TextSecondary}"
                                   FontSize="15"
                                   FontWeight="Bold"
                                   Margin="0,4,0,0"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                    <!-- Separator -->
                    <Separator Margin="0,0,0,16"/>
                    <!-- наживки -->
                    <!-- ⭐ Лучшие наживки (магазинные + крафтовые) -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="Лучшие наживки"
               Style="{StaticResource SubHeaderTextStyle}"
               Foreground="{DynamicResource TextSecondary}"
               Margin="0,0,0,8"/>
                        <ScrollViewer HorizontalScrollBarVisibility="Auto"
                           VerticalScrollBarVisibility="Disabled"
                           Height="100">
                            <ItemsControl ItemsSource="{Binding BestLures}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Width="70" Margin="0,0,8,0">
                                            <Border Width="56" Height="56"
                            Background="{DynamicResource PanelBackground}"
                            CornerRadius="6"
                            BorderBrush="{DynamicResource BorderBrushLight}"
                            BorderThickness="1"
                            Padding="4">
                                                <Image Source="{Binding ImagePath, Converter={StaticResource ImgConverter}}"
                               Stretch="Uniform"/>
                                            </Border>
                                            <TextBlock Text="{Binding Name}"
                               FontSize="13"
                               TextAlignment="Center"
                               TextTrimming="CharacterEllipsis"
                               Margin="0,4,0,0"
                               Foreground="{DynamicResource TextSecondary}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </StackPanel>
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="Может клевать"
                                   Style="{StaticResource SubHeaderTextStyle}"
                        Foreground="{DynamicResource TextSecondary}"
                        Margin="0,0,0,8"/>
                        <ScrollViewer HorizontalScrollBarVisibility="Auto"
                           VerticalScrollBarVisibility="Disabled"
                           Height="100">
                            <ItemsControl ItemsSource="{Binding MaybeCatchLures}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Width="70" Margin="0,0,8,0">
                                            <Border Width="56" Height="56"
                                         Background="{DynamicResource PanelBackground}"
                                         CornerRadius="6"
                                         BorderBrush="{DynamicResource BorderBrushLight}"
                                         BorderThickness="1"
                                         Padding="4">
                                                <Image Source="{Binding ImagePath, Converter={StaticResource ImgConverter}}"
                                            Stretch="Uniform"/>
                                            </Border>
                                            <TextBlock Text="{Binding Name}"
                                            FontSize="13"
                                            TextAlignment="Center"
                                            TextTrimming="CharacterEllipsis"
                                            Margin="0,4,0,0"
                                            Foreground="{DynamicResource TextSecondary}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </StackPanel>
                    <!-- Обычные прикормки (из выбранной рыбы) -->
                    <StackPanel Margin="0,4,0,8">
                        <TextBlock Text="Прикормки (рыба)"
                                   FontWeight="SemiBold"
                                   FontSize="16"
                                   Foreground="{DynamicResource TextSecondary}"
                                   Margin="0,0,0,4"/>
                        <ScrollViewer HorizontalScrollBarVisibility="Auto"
                                      VerticalScrollBarVisibility="Disabled"
                                      Height="100">
                            <ItemsControl ItemsSource="{Binding SelectedFeeds}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Width="70" Margin="0,0,8,0">
                                            <Border Width="56" Height="56"
                                                    Background="{DynamicResource PanelBackground}"
                                                    CornerRadius="6"
                                                    BorderBrush="{DynamicResource BorderBrushLight}"
                                                    BorderThickness="1"
                                                    Padding="4">
                                                <Image Source="{Binding ImagePath, Converter={StaticResource ImgConverter}}"
                                                       Stretch="Uniform"/>
                                            </Border>
                                            <TextBlock Text="{Binding Name}"
                                                       FontSize="13"
                                                       TextAlignment="Center"
                                                       TextTrimming="CharacterEllipsis"
                                                       Margin="0,4,0,0"
                                                       Foreground="{DynamicResource TextSecondary}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </StackPanel>
                    <!-- Рецепты прикормки (из выбранной рыбы) -->
                    <StackPanel Margin="0,4,0,8">
                        <TextBlock Text="Рецепты прикормки (рыба)"
                                   FontWeight="SemiBold"
                                   FontSize="16"
                                   Foreground="{DynamicResource TextSecondary}"
                                   Margin="0,0,0,4"/>
                        <ItemsControl ItemsSource="{Binding RecipesForSelectedFish}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="2"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <!-- Цветная рамка по Rank -->
                                    <Border Margin="0,0,0,6"
                                            Padding="4"
                                            CornerRadius="4"
                                            BorderThickness="8"
                                            Width="280"
                                            HorizontalAlignment="Left"
                                            Style="{Binding Rank, Converter={StaticResource RecipeRankToStyleConverter}}">
                                        <Grid>
                                            <StackPanel>
                                                <!-- Название и дата -->
                                                <TextBlock Text="{Binding Name}"
                                                           FontSize="17"
                                                           FontWeight="Bold"/>
                                                <TextBlock Text="{Binding DateEdited, StringFormat='dd.MM.yyyy HH:mm'}"
                                                           FontSize="10"
                                                           Foreground="{DynamicResource TextSecondary}"/>

                                                <!-- Состав рецепта (список строк через RecipeCompositionConverter) -->
                                                <ItemsControl Margin="0,4,0,0"
                                                              ItemsSource="{Binding Path=., Mode=OneWay, Converter={StaticResource RecipeCompositionConverter}}">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <TextBlock FontSize="16"
                                                                       Foreground="{DynamicResource TextSecondary}">
                                                                <Run Text="• "/>
                                                                <Run Text="{Binding Path=., Mode=OneWay}"/>
                                                            </TextBlock>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </StackPanel>
                                            <Button Content="✖"
                                                    Width="34" Height="34"
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Top"
                                                    Margin="0"
                                                    Style="{StaticResource IconButton}"
                                                    Background="{StaticResource ButtonDeleteBrush}"
                                                    Foreground="White"
                                                    BorderBrush="Black"
                                                    Command="{Binding DataContext.DeleteRecipeForeverCmd,
                                      RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    ToolTip="Удалить рецепт полностью"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                    <!-- Заметки -->
                    <StackPanel>
                        <TextBlock Text="Заметки"
                        FontWeight="SemiBold"
                        FontSize="14"
                        Foreground="{DynamicResource TextSecondary}"
                        Margin="0,0,0,8"/>
                        <Border Background="{DynamicResource PanelBackground}"
                     BorderBrush="{DynamicResource BorderBrushLight}"
                     BorderThickness="1"
                     CornerRadius="6">
                            <TextBox Text="{Binding SelectedFish.Comment, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                          AcceptsReturn="True"
                          MinHeight="100"
                          TextWrapping="Wrap"
                          BorderThickness="0"
                          Background="Transparent"
                          Padding="8"
                          FontSize="16"
                          VerticalScrollBarVisibility="Auto"/>
                        </Border>
                    </StackPanel>
                    <!-- 🎯 Точки лова -->
                    <StackPanel Margin="0,16,0,0">
                        <Border Background="{DynamicResource PanelBackground}"
                                BorderBrush="{DynamicResource BorderBrushLight}"
                                BorderThickness="1"
                                CornerRadius="6"
                                Padding="6"
                                MaxHeight="260">
                            <ScrollViewer VerticalScrollBarVisibility="Auto"
                                          HorizontalScrollBarVisibility="Disabled">
                                <views:CatchPointsView DataContext="{Binding CatchPointsVM}" Margin="6">
                                    <views:CatchPointsView.Style>
                                        <Style TargetType="views:CatchPointsView">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <!-- 🐟 Скрывать, если родительский VM в режиме "Fish" -->
                                                <DataTrigger Binding="{Binding DataContext.CurrentMode, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                             Value="Fish">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </views:CatchPointsView.Style>
                                </views:CatchPointsView>
                            </ScrollViewer>
                        </Border>
                    </StackPanel>
                    <!-- График -->
                    <StackPanel Margin="0,16,0,0">
                        <TextBlock Text="График интенсивности клева"
                                   FontWeight="SemiBold"
                                   FontSize="18"
                                   Foreground="{DynamicResource TextSecondary}"
                                   Margin="0,0,0,8"/>
                        <Border Background="{DynamicResource PanelBackground}"
                                BorderBrush="{DynamicResource BorderBrushLight}"
                                BorderThickness="1"
                                CornerRadius="6"
                                Padding="6"
                                Height="240">
                            <lvc:CartesianChart x:Name="BiteChart"
                                                Series="{Binding BiteChartSeries}"
                                                XAxes="{Binding BiteChartXAxes}"
                                                YAxes="{Binding BiteChartYAxes}"
                                                TooltipPosition="Top"
                                                AnimationsSpeed="0:0:0.5"
                                                MouseDown="BiteChart_MouseDown"
                                                MouseMove="BiteChart_MouseMove"
                                                MouseUp="BiteChart_MouseUp"
                                                MouseLeave="BiteChart_MouseLeave"/>
                        </Border>
                        <TextBlock Text="{Binding BiteDescription}" Margin="4,6,0,0"/>
                    </StackPanel>
                </StackPanel>
                <!-- Placeholder когда ничего не выбрано -->
                <StackPanel x:Name="FishPlaceholder"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Margin="0,100,0,0"
                            Visibility="Collapsed">
                    <TextBlock Text="🐟" FontSize="64" HorizontalAlignment="Center" Opacity="0.2"/>
                    <TextBlock Text="Выберите рыбу"
                               FontSize="18"
                               Foreground="{DynamicResource TextSecondary}"
                               HorizontalAlignment="Center"
                               Margin="0,12,0,4"/>
                    <TextBlock Text="для просмотра подробной информации"
                               FontSize="12"
                               Foreground="{DynamicResource TextSecondary}"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Border>
</UserControl>
