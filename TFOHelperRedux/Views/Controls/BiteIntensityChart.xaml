<UserControl x:Class="TFOHelperRedux.Views.Controls.BiteIntensityChart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="240"
             d:DesignWidth="800">
    
    <Border Background="{DynamicResource PanelBackground}"
            BorderBrush="{DynamicResource BorderBrushLight}"
            BorderThickness="1"
            CornerRadius="6"
            Padding="6">
        <Grid>
            <!-- Горизонтальные линии шкалы -->
            <Canvas>
                <Line X1="0" Y1="20" X2="780" Y2="20" Stroke="{DynamicResource BorderBrushLight}" StrokeThickness="1"/>
                <Line X1="0" Y1="60" X2="780" Y2="60" Stroke="{DynamicResource BorderBrushLight}" StrokeThickness="1"/>
                <Line X1="0" Y1="100" X2="780" Y2="100" Stroke="{DynamicResource BorderBrushLight}" StrokeThickness="1"/>
            </Canvas>

            <!-- ScrollViewer с поддержкой перетаскивания -->
            <ScrollViewer x:Name="ChartScrollViewer"
                          HorizontalScrollBarVisibility="Hidden"
                          VerticalScrollBarVisibility="Disabled"
                          Panel.ZIndex="1"
                          MouseDown="Chart_MouseDown"
                          MouseMove="Chart_MouseMove"
                          MouseUp="Chart_MouseUp"
                          MouseLeave="Chart_MouseLeave"
                          LostMouseCapture="Chart_LostMouseCapture"
                          Cursor="Hand">
                <ItemsControl ItemsSource="{Binding BiteIntensity, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                              AlternationCount="24">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"
                                        VerticalAlignment="Bottom"
                                        Height="100"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Vertical" VerticalAlignment="Bottom" Margin="1,0">
                                <Border Width="18" Margin="2,0"
                                        Height="{Binding ., Converter={StaticResource BiteToHeightConverter}}"
                                        Background="{StaticResource SuccessColor}"
                                        MouseDown="BiteBar_Click"
                                        Tag="{Binding RelativeSource={RelativeSource AncestorType=ContentPresenter},
                                              Path=(ItemsControl.AlternationIndex)}">
                                    <Border.RenderTransformOrigin>0.5, 1.0</Border.RenderTransformOrigin>
                                    <Border.RenderTransform>
                                        <ScaleTransform ScaleY="0"/>
                                    </Border.RenderTransform>
                                    <Border.Triggers>
                                        <EventTrigger RoutedEvent="Loaded">
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation
                                                        Storyboard.TargetProperty="RenderTransform.ScaleY"
                                                        From="0" To="1"
                                                        Duration="0:0:0.5">
                                                        <DoubleAnimation.EasingFunction>
                                                            <ElasticEase EasingMode="EaseOut" Oscillations="1" Springiness="4"/>
                                                        </DoubleAnimation.EasingFunction>
                                                    </DoubleAnimation>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                    </Border.Triggers>
                                </Border>
                                <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType=ContentPresenter},
                                           Path=(ItemsControl.AlternationIndex)}"
                                           FontSize="13"
                                           Foreground="{DynamicResource TextSecondary}"
                                           HorizontalAlignment="Center"
                                           Margin="0,2,0,0"/>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Border>
</UserControl>
