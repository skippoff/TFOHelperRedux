<UserControl x:Class="TFOHelperRedux.Views.NavigationPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <StackPanel Orientation="Horizontal"
                Margin="0,6,0,0"
                HorizontalAlignment="Left">
        <Button Content="Локации"
                Command="{Binding NavigationVM.ShowMapsCmd}"
                Style="{StaticResource MapButton}"
                Tag="{StaticResource IconMap}"
                Margin="0,0,6,0"/>
        <Button Content="Прикорм и дипы"
                Command="{Binding NavigationVM.ShowBaitsCmd}"
                Style="{StaticResource FishButton}"
                Tag="{StaticResource IconFish}"
                Margin="0,0,6,0"/>

        <!-- 🌓 Переключатель темы -->
        <ToggleButton Style="{StaticResource ThemeToggleButton}"
                      ToolTip="Переключить тему"
                      IsChecked="{Binding NavigationVM.IsDarkTheme, Mode=TwoWay}"
                      Margin="12,0,0,0"
                      VerticalAlignment="Center"/>
    </StackPanel>
</UserControl>